---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';

const baseUrl = import.meta.env.BASE_URL.endsWith('/') ? import.meta.env.BASE_URL : import.meta.env.BASE_URL + '/';
---

<Layout title="Test des polices - SANTAIX">
  <Header />
  
  <main class="flex-grow py-16">
    <div class="container mx-auto px-4">
      <h1 class="text-3xl font-bold text-center text-blue-900 mb-12">
        Comparaison des polices arrondies pour "SANTAIX"
      </h1>
      
      <div class="max-w-4xl mx-auto space-y-8">
        <!-- Option 1: Quicksand -->
        <div class="bg-white rounded-lg shadow-md p-6 border-2 border-gray-200">
          <div class="flex items-center gap-4 mb-4">
            <img 
              src={`${baseUrl}logo-santaix.png`}
              alt=""
              class="h-12 w-auto"
            />
            <span class="text-[#206794] text-3xl font-semibold tracking-wide" style="font-family: 'Quicksand', sans-serif;">
              SANTAIX
            </span>
          </div>
          <p class="text-sm text-gray-600">
            <strong>Quicksand</strong> - Sans-serif arrondie et moderne, très lisible
          </p>
        </div>
        
        <!-- Option 2: Nunito -->
        <div class="bg-white rounded-lg shadow-md p-6 border-2 border-gray-200">
          <div class="flex items-center gap-4 mb-4">
            <img 
              src={`${baseUrl}logo-santaix.png`}
              alt=""
              class="h-12 w-auto"
            />
            <span class="text-[#206794] text-3xl font-semibold tracking-wide" style="font-family: 'Nunito', sans-serif;">
              SANTAIX
            </span>
          </div>
          <p class="text-sm text-gray-600">
            <strong>Nunito</strong> - Sans-serif arrondie et professionnelle, très équilibrée
          </p>
        </div>
        
        <!-- Option 3: Poppins -->
        <div class="bg-white rounded-lg shadow-md p-6 border-2 border-gray-200">
          <div class="flex items-center gap-4 mb-4">
            <img 
              src={`${baseUrl}logo-santaix.png`}
              alt=""
              class="h-12 w-auto"
            />
            <span class="text-[#206794] text-3xl font-semibold tracking-wide" style="font-family: 'Poppins', sans-serif;">
              SANTAIX
            </span>
          </div>
          <p class="text-sm text-gray-600">
            <strong>Poppins</strong> - Sans-serif arrondie et géométrique, moderne et formelle
          </p>
        </div>
        
        <!-- Option 4: Raleway -->
        <div class="bg-white rounded-lg shadow-md p-6 border-2 border-gray-200">
          <div class="flex items-center gap-4 mb-4">
            <img 
              src={`${baseUrl}logo-santaix.png`}
              alt=""
              class="h-12 w-auto"
            />
            <span class="text-[#206794] text-3xl font-semibold tracking-wider" style="font-family: 'Raleway', sans-serif;">
              SANTAIX
            </span>
          </div>
          <p class="text-sm text-gray-600">
            <strong>Raleway</strong> - Sans-serif élégante avec espacement naturel, très raffinée
          </p>
        </div>
        
        <!-- Option 5: Montserrat -->
        <div class="bg-white rounded-lg shadow-md p-6 border-2 border-gray-200">
          <div class="flex items-center gap-4 mb-4">
            <img 
              src={`${baseUrl}logo-santaix.png`}
              alt=""
              class="h-12 w-auto"
            />
            <span class="text-[#206794] text-3xl font-semibold tracking-wide" style="font-family: 'Montserrat', sans-serif;">
              SANTAIX
            </span>
          </div>
          <p class="text-sm text-gray-600">
            <strong>Montserrat</strong> - Sans-serif arrondie et moderne, professionnelle et lisible
          </p>
        </div>
        
        <!-- Option actuelle: Playfair Display -->
        <div class="bg-blue-50 rounded-lg shadow-md p-6 border-2 border-blue-300">
          <div class="flex items-center gap-4 mb-4">
            <img 
              src={`${baseUrl}logo-santaix.png`}
              alt=""
              class="h-12 w-auto"
            />
            <span class="text-[#206794] text-3xl font-semibold tracking-tight" style="font-family: 'Playfair Display', serif;">
              SANTAIX
            </span>
          </div>
          <p class="text-sm text-gray-600">
            <strong>Playfair Display</strong> - Actuellement utilisée (serif élégant et moderne)
          </p>
        </div>
      </div>
    </div>
  </main>
  
  <Footer />
</Layout>

