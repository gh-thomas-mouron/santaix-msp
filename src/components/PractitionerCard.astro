---
interface Props {
  name: string;
  specialty: string;
  description?: string;
  imageUrl?: string;
}

const { name, specialty, description, imageUrl } = Astro.props;
---

<div class="bg-white rounded-xl shadow-md hover:shadow-xl transition-shadow duration-300 p-5 md:p-6 border border-gray-100">
  <div class="flex flex-col h-full">
    <!-- Photo -->
    {imageUrl && (
      <div class="mb-4 flex justify-center">
        <img 
          src={imageUrl}
          alt={name}
          class="w-32 h-32 rounded-full object-cover border-4 border-blue-100"
        />
      </div>
    )}
    
    <!-- En-tÃªte -->
    <div class="mb-3 md:mb-4">
      <h3 class="text-lg sm:text-xl font-bold text-blue-900 mb-1">{name}</h3>
      <p class="text-sm sm:text-base text-teal-600 font-medium">{specialty}</p>
    </div>

    <!-- Description -->
    {description && (
      <p class="text-gray-600 text-sm flex-grow">{description}</p>
    )}
  </div>
</div>

