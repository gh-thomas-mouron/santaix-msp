---
interface Props {
  name: string;
  specialty: string;
  description?: string;
}

const { name, specialty, description } = Astro.props;
const doctolibUrl = "https://www.doctolib.fr/centre-de-sante/aix-en-provence/santaix";
---

<div class="bg-white rounded-xl shadow-md hover:shadow-xl transition-shadow duration-300 p-5 md:p-6 border border-gray-100">
  <div class="flex flex-col h-full">
    <!-- En-tÃªte -->
    <div class="mb-3 md:mb-4">
      <h3 class="text-lg sm:text-xl font-bold text-blue-900 mb-1">{name}</h3>
      <p class="text-sm sm:text-base text-teal-600 font-medium">{specialty}</p>
    </div>

    <!-- Description -->
    {description && (
      <p class="text-gray-600 text-sm mb-4 flex-grow">{description}</p>
    )}

    <!-- Bouton RDV -->
    <div class="mt-auto pt-3 md:pt-4 border-t border-gray-100">
      <a
        href={doctolibUrl}
        target="_blank"
        rel="noopener noreferrer"
        class="block w-full text-center px-4 py-2.5 bg-teal-500 text-white rounded-lg text-sm sm:text-base font-medium hover:bg-teal-600 transition-colors"
      >
        Prendre rendez-vous
      </a>
    </div>
  </div>
</div>

